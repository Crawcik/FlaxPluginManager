<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FlaxPlugMan.MainWindow"
        Title="Select project"
        Width="360" Height="600"
        CanResize="false"
        Background="#282e33">
